{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es6", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/backend/lib/*": ["src/backend/lib/*"],
      "@/backend/use-cases/*": ["src/backend/use-cases/*"],
      "@/frontend/lib/*": ["src/frontend/lib/*"],
      "@/frontend/use-cases/*": ["src/frontend/use-cases/*"],
      "@/shared/lib/*": ["src/shared/lib/*"]
    }
  },
  "include": ["src/**/*", "rsbuild.config.ts", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
