{
  "name": "electron-react-rsbuild",
  "version": "0.1.2",
  "description": "Boilerplate using Rsbuild as bundler for Electron apps.",
  "type": "module",
  "scripts": {
    "dev": "bun run scripts/start-dev-rsbuild.cjs",
    "start": "bunx electron src/main/main.cjs",
    "build": "bunx rsbuild build && bun run build-preload && bun run copy-main && bun run copy-icons",
    "build-preload": "tsc -p tsconfig.node.json",
    "copy-main": "node scripts/copy-main.cjs",
    "copy-icons": "node scripts/build-icons.cjs",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format .",
    "format:fix": "bunx @biomejs/biome format --write .",
    "dist": "bun run build && bun run electron-dist",
    "electron-dist": "bunx electron-builder"
  },
  "author": "naranyala",
  "build": {
    "appId": "com.some.electron.quickstart",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "dist/icon.png"
    },
    "win": {
      "target": "msi",
      "icon": "dist/icon.png"
    },
    "files": [
      "src/main/**/*",
      "dist/**/*"
    ]
  },
  "keywords": [
    "rsbuild",
    "react",
    "electron"
  ],
  "license": "MIT",
  "dependencies": {
    "get-port": "^7.1.0",
    "winbox": "^0.2.82"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@rsbuild/core": "^1.7.2",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^25.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^1.5.0",
    "fs-extra": "^11.3.3",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
